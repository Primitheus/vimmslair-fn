{
  "manifest_version": 3,
  "name": "Vimm's Lair FN",
  "version": "1.0",
  "description": "Download Certain ROMs from Vimm's Lair",
  "permissions": [
    "declarativeNetRequest",
    "tabs",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}